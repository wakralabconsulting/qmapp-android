<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Position Style-->

    <style name="Center" tools:ignore="ResourceName">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="CenterBottom" tools:ignore="ResourceName">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="BottomRight" tools:ignore="ResourceName">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:padding">10dp</item>
    </style>

    <!--<item name="android:paddingBottom">10dp</item>-->
    <!--<item name="android:paddingLeft">10dp</item>-->
    <style name="BottomLeft" tools:ignore="ResourceName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="CenterTop" tools:ignore="ResourceName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="CenterTopRight" tools:ignore="ResourceName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="CenterTopLeft" tools:ignore="ResourceName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="AnimLineIndicator" tools:ignore="ResourceName">
        <item name="ci_width">10dp</item>
        <item name="ci_height">4dp</item>
        <item name="ci_margin">6dp</item>
        <item name="ci_animator">@animator/translation_and_rotate</item>
        <item name="ci_drawable">@drawable/balck_radius_square</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>
</resources>