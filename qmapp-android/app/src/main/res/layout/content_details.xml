<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.qatarmuseums.qatarmuseumsapp.detailspage.DetailsActivity"
    tools:showIn="@layout/activity_details">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/common_content_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_color"
            android:focusable="true"
            android:orientation="vertical"
            android:visibility="gone">

            <cn.lightsky.infiniteindicator.InfiniteIndicator
                android:id="@+id/carousel_indicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:indicator_type="indicator_anim_circle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/text_margin"
                android:layout_marginEnd="@dimen/text_margin"
                android:layout_marginStart="@dimen/text_margin"
                android:background="@drawable/round_corner_white_details_page"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="@dimen/padding_25">

                <TextView
                    android:id="@+id/main_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/din_next_lt_pro_bold"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_18"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="25dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/pading_10"
                    android:background="@color/black" />

                <TextView
                    android:id="@+id/sub_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_margin"
                    android:fontFamily="@font/din_regular"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_16"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/short_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin"
                    android:fontFamily="@font/din_next_lt_pro_regular"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_15" />

                <TextView
                    android:id="@+id/long_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin"
                    android:fontFamily="@font/din_next_lt_pro_regular"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_15" />

                <LinearLayout
                    android:id="@+id/second_title_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/second_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/din_regular"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_18"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="25dp"
                        android:layout_height="2dp"
                        android:layout_marginTop="@dimen/pading_10"
                        android:background="@color/black" />

                    <TextView
                        android:id="@+id/second_short_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/text_margin"
                        android:fontFamily="@font/din_next_lt_pro_regular"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_15" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/download_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/download_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleX="0.75"
                        android:scaleY="0.75"
                        android:src="@drawable/download_icon" />

                    <TextView
                        android:id="@+id/download_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/text_margin"
                        android:fontFamily="@font/din_next_lt_pro_regular"
                        android:text="@string/download_brochure_for_more_information"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_14" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/interest_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/text_margin"
                        android:fontFamily="@font/din_next_lt_pro_light"
                        android:text="@string/interested"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_16" />

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/interest_toggle_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"

                        android:clickable="false"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:theme="@style/ColorSwitchStyle" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/text_margin"
                        android:fontFamily="@font/din_next_lt_pro_light"
                        android:text="@string/not_interested"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_16" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/speaker_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/text_margin"
                android:layout_marginStart="@dimen/text_margin"
                android:background="@drawable/round_corner_white_details_page"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/speaker_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/placeholder"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/name_of_the_speaker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_25"
                    android:fontFamily="@font/din_next_lt_pro_bold"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_30"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="25dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/pading_10"
                    android:background="@color/black" />

                <TextView
                    android:id="@+id/information_of_the_speaker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin"
                    android:fontFamily="@font/din_next_lt_pro_regular"
                    android:padding="@dimen/padding_25"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_15" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/event_date_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/text_margin"
                android:layout_marginStart="@dimen/text_margin"
                android:background="@drawable/round_corner_white_details_page"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="@dimen/padding_25"
                android:visibility="gone">

                <TextView
                    android:id="@+id/event_date_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/din_next_lt_pro_bold"
                    android:text="@string/event_date"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_18" />

                <LinearLayout
                    android:layout_width="25dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/pading_10"
                    android:background="@color/black" />


                <TextView
                    android:id="@+id/event_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin"
                    android:fontFamily="@font/din_next_lt_pro_regular"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_15" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:background="@drawable/round_corner_white_details_page"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/timing_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/text_margin"
                    android:layout_marginTop="@dimen/text_margin"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingEnd="@dimen/padding_25"
                    android:paddingStart="@dimen/padding_25"
                    android:paddingTop="@dimen/padding_25"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/timing_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/din_next_lt_pro_bold"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_18" />

                    <LinearLayout
                        android:layout_width="25dp"
                        android:layout_height="3dp"
                        android:layout_marginBottom="@dimen/padding_10"
                        android:layout_marginTop="@dimen/padding_10"
                        android:background="@color/black" />

                    <TextView
                        android:id="@+id/timing_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/text_margin"
                        android:layout_marginEnd="@dimen/text_margin"
                        android:layout_marginStart="@dimen/text_margin"
                        android:fontFamily="@font/din_next_lt_pro_regular"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_15" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/video_layout"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="@dimen/padding_15"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <cn.jzvd.JzvdStd
                        android:id="@+id/videoplayer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/video_place_holder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/location_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/location_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_margin"
                        android:fontFamily="@font/din_next_lt_pro_bold"
                        android:text="@string/location_title"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_18" />

                    <LinearLayout
                        android:layout_width="25dp"
                        android:layout_height="3dp"
                        android:layout_marginBottom="@dimen/padding_10"
                        android:layout_marginTop="@dimen/pading_10"
                        android:background="@color/black"
                        android:padding="@dimen/padding_25" />

                    <TextView
                        android:id="@+id/location_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/text_margin"
                        android:layout_marginStart="@dimen/text_margin"
                        android:fontFamily="@font/din_next_lt_pro_regular"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_15"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/map_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.gms.maps.MapView
                                android:id="@+id/map_info"
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:layout_marginBottom="@dimen/padding_10" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:gravity="bottom|end"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/map_view"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="@dimen/padding_20"
                                    android:paddingEnd="@dimen/padding_10"
                                    android:paddingStart="0dp"
                                    android:src="@drawable/ic_satellite" />

                                <ImageView
                                    android:id="@+id/direction"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="@dimen/padding_20"
                                    android:paddingEnd="@dimen/padding_10"
                                    android:paddingStart="0dp"
                                    android:src="@drawable/ic_directions" />
                            </LinearLayout>
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/offer_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_25"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/offer_code_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_margin"
                        android:fontFamily="@font/din_next_lt_pro_bold"
                        android:text="@string/offer_code"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_18" />

                    <LinearLayout
                        android:layout_width="25dp"
                        android:layout_height="3dp"
                        android:layout_marginBottom="@dimen/padding_15"
                        android:layout_marginTop="@dimen/padding_10"
                        android:background="@color/black" />

                    <TextView
                        android:id="@+id/offer_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/text_margin"
                        android:layout_marginEnd="@dimen/text_margin"
                        android:layout_marginStart="@dimen/text_margin"
                        android:fontFamily="@font/din_next_lt_pro_regular"
                        android:text="QANMOQ-VIP1"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_28" />

                    <Button
                        android:id="@+id/claim_offer_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/text_margin"
                        android:layout_marginStart="@dimen/text_margin"
                        android:layout_marginTop="@dimen/margin_10"
                        android:background="@drawable/round_corner_black"
                        android:fontFamily="@font/din_next_lt_pro_bold"
                        android:text="@string/claim_offer"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/settings_page_list_item_text_size" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/contact_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_25"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/contact_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_margin"
                        android:fontFamily="@font/din_next_lt_pro_bold"
                        android:text="@string/contact_title"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_18" />

                    <LinearLayout
                        android:layout_width="25dp"
                        android:layout_height="3dp"
                        android:layout_marginBottom="@dimen/padding_10"
                        android:layout_marginTop="@dimen/padding_10"
                        android:background="@color/black" />

                    <TextView
                        android:id="@+id/contact_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/text_margin"
                        android:layout_marginEnd="@dimen/text_margin"
                        android:layout_marginStart="@dimen/text_margin"
                        android:fontFamily="@font/din_next_lt_pro_regular"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_15" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/share_favourite_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_50"
                android:visibility="gone">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/favourite"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:src="@drawable/heart_fill" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/share"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:src="@drawable/share" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

            </LinearLayout>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBarLoading"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="50dp"
            android:visibility="gone" />


        <TextView
            android:id="@+id/noResultFoundTxt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/margin_50"
            android:fontFamily="@font/din_next_lt_pro_regular"
            android:gravity="center"
            android:text="@string/no_results_text"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_size_21"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/retry_layout_about"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottom_toolbar"
            android:layout_marginTop="@dimen/margin_50"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/padding_40"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/din_next_lt_pro_bold"
                android:text="@string/oops"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="@dimen/font_size_28" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pading_15"
                android:fontFamily="@font/din_next_lt_pro_light"
                android:text="@string/there_is_no_internet"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="@dimen/font_size_18" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/din_next_lt_pro_light"
                android:text="@string/please_check_your_internet"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="@dimen/font_size_18" />

            <Button
                android:id="@+id/retry_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/padding_25"
                android:background="@drawable/round_corner_black"
                android:fontFamily="@font/din_next_lt_pro_bold"
                android:gravity="center"
                android:paddingEnd="@dimen/pading_30"
                android:paddingStart="@dimen/pading_30"
                android:text="@string/try_again"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/settings_page_list_item_text_size" />

        </LinearLayout>

    </RelativeLayout>


</android.support.v4.widget.NestedScrollView>
