<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99000000"
    android:gravity="center"
    android:paddingBottom="@dimen/padding_25"
    android:paddingEnd="@dimen/padding_25"
    android:paddingStart="@dimen/padding_40"
    android:paddingTop="@dimen/padding_40">

    <RelativeLayout
        android:id="@+id/dialog_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/padding_50"
        android:layout_marginEnd="@dimen/padding_25"
        android:layout_marginStart="@dimen/padding_10"
        android:layout_marginTop="@dimen/padding_50"
        android:background="@drawable/round_corner_white"
        android:paddingBottom="@dimen/padding_10"
        android:paddingEnd="@dimen/padding_10"
        android:paddingStart="@dimen/padding_10">

        <LinearLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_25"
            android:gravity="center">

            <TextView
                android:id="@+id/dialog_tittle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/din_next_lt_pro_bold"
                android:gravity="center"
                android:textAllCaps="true"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/font_size_21" />

        </LinearLayout>

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_2"
            android:layout_below="@id/title_layout"
            android:layout_marginTop="@dimen/padding_20"
            android:background="@color/colorBlack" />

        <ScrollView
            android:id="@+id/scroll_view_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/doneBtn"
            android:layout_below="@id/view_line"
            android:layout_marginTop="@dimen/padding_10"
            android:scrollbars="none">

            <TextView
                android:id="@+id/dialog_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/padding_5"
                android:paddingStart="@dimen/padding_5"
                android:textAlignment="center"
                android:textSize="@dimen/font_size_18" />
        </ScrollView>


        <Button
            android:id="@+id/doneBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_margin="@dimen/padding_15"
            android:background="@drawable/round_corner_black"
            android:fontFamily="@font/din_next_lt_pro_bold"
            android:gravity="center"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font_size_21" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/close_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/popup_close"
        app:layout_constraintBottom_toTopOf="@id/dialog_layout"
        app:layout_constraintEnd_toEndOf="@id/dialog_layout"
        app:layout_constraintStart_toEndOf="@id/dialog_layout"
        app:layout_constraintTop_toTopOf="@id/dialog_layout"
        tools:ignore="ContentDescription" />


</android.support.constraint.ConstraintLayout>