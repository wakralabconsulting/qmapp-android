<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tourguidestartpage.TourGuideStartPageActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/pading_25"
        android:weightSum="1">

        <ImageView
            android:id="@+id/object_image"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.65" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/semi_transparent_white"
        android:orientation="vertical"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/playBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:src="@drawable/play_white"
                android:tint="@color/black"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/pading_25"
            android:layout_marginStart="@dimen/pading_25"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingEnd="@dimen/padding_10"
            android:paddingStart="@dimen/padding_10">

            <TextView
                android:id="@+id/museum_tittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_10"
                android:fontFamily="@font/din_next_lt_pro_bold"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_40"
                android:visibility="visible" />

            <TextView
                android:id="@+id/museum_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_5"
                android:ellipsize="end"
                android:lines="6"
                android:paddingEnd="@dimen/padding_15"
                android:paddingStart="@dimen/padding_15"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_16" />


            <Button
                android:id="@+id/start_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_corner_skyblue"
                android:fontFamily="@font/din_next_lt_pro_bold"
                android:text="@string/start_tour"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/settings_page_list_item_text_size"
                android:visibility="visible" />


        </LinearLayout>


    </LinearLayout>


</FrameLayout>


