<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_holder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingEnd="@dimen/padding_5"
    android:paddingStart="@dimen/padding_5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/padding_10"
        android:paddingStart="@dimen/padding_10"
        android:weightSum="12">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/padding_15"
                android:orientation="vertical"
                android:padding="@dimen/padding_5">

                <TextView
                    android:id="@+id/event_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textAllCaps="true"
                    android:textColor="@color/event_title_color"
                    android:textSize="@dimen/text_size_11"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/event_hiphen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/event_title"
                    android:gravity="start"
                    android:text="-"
                    android:textColor="@color/event_title_color"
                    android:textSize="@dimen/text_size_11"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/event_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/event_hiphen"
                    android:layout_marginBottom="@dimen/padding_3"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:lines="4"
                    android:textAllCaps="true"
                    android:textColor="@color/event_title_color"
                    android:textSize="@dimen/text_size_11"
                    android:textStyle="bold" />


            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_10"
            android:layout_marginEnd="@dimen/padding_5"
            android:layout_marginStart="@dimen/padding_5"
            android:layout_marginTop="@dimen/padding_10"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:orientation="vertical"
            android:padding="@dimen/padding_5"
            android:weightSum="10">

            <TextView
                android:id="@+id/event_timing"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/padding_10"
                android:layout_weight="9"
                android:fontFamily="@font/din_next_lt_pro_light"
                android:gravity="start"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_9" />

            <TextView
                android:id="@+id/event_view_details"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:gravity="end"
                android:text="@string/view_details"
                android:textColor="@color/black"
                android:textSize="8sp" />


        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/darkGray" />
</LinearLayout>
