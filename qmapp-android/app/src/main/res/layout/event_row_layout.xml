<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/padding_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/padding_5"
                android:weightSum="20">

                <TextView
                    android:id="@+id/event_title"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:text="@string/event_text_first"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/events_text_size" />

                <TextView
                    android:id="@+id/event_hiphen"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="@string/hiphen"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/events_text_size" />

                <TextView
                    android:id="@+id/event_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6"
                    android:text="@string/event_text_second"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/events_text_size" />

                <TextView
                    android:id="@+id/event_timing"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="9"
                    android:text="@string/event_timing_text"
                    android:textColor="@color/black" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_10"
            android:layout_marginTop="@dimen/padding_10"
            android:background="@color/darkGray" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:orientation="vertical"
            android:padding="@dimen/padding_5"
            android:weightSum="10">

            <TextView
                android:id="@+id/event_detail_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:text="@string/event_detail_text"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/event_view_details"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="end"
                android:layout_weight="2"
                android:gravity="end"
                android:text="@string/view_details"
                android:textColor="@color/black" />
            <View
                android:layout_width="75dp"
                android:layout_height="1dp"
                android:layout_gravity="end"
                android:background="@color/darkGray"
                />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/padding_10"
        android:layout_marginTop="@dimen/padding_10"
        android:background="@color/darkGray" />
</LinearLayout>
