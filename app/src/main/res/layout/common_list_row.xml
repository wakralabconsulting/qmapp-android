<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/common_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:padding="10dp">

        <TextView
            android:id="@+id/open_close_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/favourite"
            android:background="@drawable/round_corner_yellow"
            android:fontFamily="@font/din_next_lt_pro_bold"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/status_tag"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/favourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:src="@drawable/heart_fill"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/common_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gradiant"
        android:gravity="center_vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/headphone_icon"
            android:fontFamily="@font/din_regular"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/home_list_item_name"
            android:textStyle="bold" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tour_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gradiant"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/date_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tour_day_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/din_regular"
                android:text="Day 01"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_size_22"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/din_next_lt_pro_bold"
                android:padding="@dimen/padding_5"
                android:text="@string/seporater"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_size_18"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tour_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/din_regular"
                android:text="25 March 2018"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_size_14"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tour_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/date_layout"
            android:fontFamily="@font/din_regular"
            android:text="Day 01"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_size_38"
            android:textStyle="bold" />


    </RelativeLayout>
</RelativeLayout>
