<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPageBackground"
    tools:context="com.qatarmuseums.qatarmuseumsapp.park.NMoQParkActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/colorBlack"
            android:theme="@style/AppTheme.PopupOverlay"
            app:contentInsetEnd="0dp"
            app:contentInsetStart="0dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/toolbar_back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:paddingEnd="20dp"
                    android:paddingStart="20dp"
                    android:src="@drawable/back_button"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/margin_50"
                    android:layout_marginStart="@dimen/margin_50"
                    android:fontFamily="@font/din_next_lt_pro_regular"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/toolbar_title"
                    android:textStyle="bold" />

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/details_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingBottom="@dimen/text_margin"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_bar">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/text_margin">

            <TextView
                android:id="@+id/main_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_margin"
                android:fontFamily="@font/din_next_lt_pro_regular"
                android:padding="@dimen/text_margin"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/font_size_15" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/parks_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/text_margin"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/main_description">

            </android.support.v7.widget.RecyclerView>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/about_park_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/text_margin"
                android:layout_marginStart="@dimen/text_margin"
                android:background="@drawable/round_corner_white_details_page"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="@dimen/padding_25"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/parks_recycler_view">

                <TextView
                    android:id="@+id/park_title_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/din_next_lt_pro_bold"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/font_size_18"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <View
                    android:id="@+id/park_title_divider"
                    android:layout_width="25dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/padding_10"
                    android:background="@color/colorBlack"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/park_title_label" />


                <TextView
                    android:id="@+id/park_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/text_margin"
                    android:layout_marginTop="@dimen/text_margin"
                    android:fontFamily="@font/din_next_lt_pro_regular"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/font_size_15"
                    app:layout_constraintTop_toBottomOf="@id/park_title_divider" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/park_timing_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:background="@drawable/round_corner_white_details_page"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="@dimen/padding_25"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/about_park_layout">

                <TextView
                    android:id="@+id/park_timing_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/din_next_lt_pro_bold"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/font_size_18"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <View
                    android:id="@+id/timing_title_divider"
                    android:layout_width="25dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/padding_10"
                    android:background="@color/colorBlack"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/park_timing_label" />


                <TextView
                    android:id="@+id/park_timings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/text_margin"
                    android:layout_marginTop="@dimen/text_margin"
                    android:fontFamily="@font/din_next_lt_pro_regular"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/font_size_15"
                    app:layout_constraintTop_toBottomOf="@id/timing_title_divider" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/location_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:background="@drawable/round_corner_white_details_page"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/park_timing_layout">

                <TextView
                    android:id="@+id/park_location_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/din_next_lt_pro_bold"
                    android:paddingTop="@dimen/text_margin"
                    android:textAllCaps="true"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/font_size_18"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <View
                    android:id="@+id/location_title_divider"
                    android:layout_width="25dp"
                    android:layout_height="3dp"
                    android:layout_marginBottom="@dimen/padding_10"
                    android:layout_marginTop="@dimen/padding_10"
                    android:background="@color/colorBlack"
                    android:padding="@dimen/padding_25"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/park_location_title" />


                <FrameLayout
                    android:id="@+id/map_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/location_title_divider">

                    <com.google.android.gms.maps.MapView
                        android:id="@+id/park_map_info"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginBottom="@dimen/padding_10"
                        android:layout_marginTop="@dimen/text_margin" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:gravity="bottom|end"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/map_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/padding_20"
                            android:paddingEnd="@dimen/padding_10"
                            android:paddingStart="0dp"
                            android:src="@drawable/ic_satellite"
                            tools:ignore="ContentDescription" />

                        <ImageView
                            android:id="@+id/direction"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/padding_20"
                            android:paddingEnd="@dimen/padding_10"
                            android:paddingStart="0dp"
                            android:src="@drawable/ic_directions"
                            tools:ignore="ContentDescription" />
                    </LinearLayout>
                </FrameLayout>

            </android.support.constraint.ConstraintLayout>
        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/progress_loading"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/no_result_found_txt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/margin_50"
        android:fontFamily="@font/din_next_lt_pro_regular"
        android:gravity="center"
        android:text="@string/no_results_text"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="@dimen/font_size_21"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/retry_layout_park"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_toolbar"
        android:layout_marginTop="@dimen/margin_50"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/padding_40"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/din_next_lt_pro_bold"
            android:text="@string/oops"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_size_28" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_15"
            android:fontFamily="@font/din_next_lt_pro_light"
            android:text="@string/there_is_no_internet"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_size_18" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/din_next_lt_pro_light"
            android:text="@string/please_check_your_internet"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_size_18" />

        <Button
            android:id="@+id/retry_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/padding_25"
            android:background="@drawable/round_corner_black"
            android:fontFamily="@font/din_next_lt_pro_bold"
            android:gravity="center"
            android:paddingEnd="@dimen/padding_30"
            android:paddingStart="@dimen/padding_30"
            android:text="@string/try_again"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font_size_21" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
