<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".8"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/padding_15"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/sidemenu_exibition_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/sidemenu_exibition_icon"
                    android:layout_width="@dimen/side_menu_items_size"
                    android:layout_height="@dimen/side_menu_items_size"
                    android:src="@drawable/exhibitionwhite" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_10"
                    android:fontFamily="@font/din_next_lt_pro_regular"
                    android:text="@string/side_menu_exhibition_text"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/font_size_16" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/sidemenu_event_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/sidemenu_event_icon"
                    android:layout_width="@dimen/side_menu_items_size"
                    android:layout_height="@dimen/side_menu_items_size"
                    android:src="@drawable/events" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_10"
                    android:fontFamily="@font/din_next_lt_pro_regular"
                    android:text="@string/side_menu_events_text"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/font_size_16" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/sidemenu_education_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/sidemenu_education_icon"
                    android:layout_width="@dimen/side_menu_items_size"
                    android:layout_height="@dimen/side_menu_items_size"
                    android:src="@drawable/education" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_10"
                    android:fontFamily="@font/din_next_lt_pro_regular"
                    android:text="@string/side_menu_education_text"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/font_size_16" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/padding_15"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/sidemenu_tour_guide_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/padding_15">

                <ImageView
                    android:id="@+id/sidemenu_tour_guide_icon"
                    android:layout_width="@dimen/side_menu_items_size"
                    android:layout_height="@dimen/side_menu_items_size"
                    android:src="@drawable/tour_guide" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_10"
                    android:fontFamily="@font/din_next_lt_pro_regular"
                    android:text="@string/side_menu_tour_guide_text"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/font_size_16" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/sidemenu_heritage_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/padding_15">

                <ImageView
                    android:id="@+id/sidemenu_heritage_icon"
                    android:layout_width="@dimen/side_menu_items_size"
                    android:layout_height="@dimen/side_menu_items_size"
                    android:src="@drawable/heritage" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_10"
                    android:fontFamily="@font/din_next_lt_pro_regular"
                    android:text="@string/side_menu_heritage_text"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/font_size_16" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/sidemenu_public_arts_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/padding_15">

                <ImageView
                    android:id="@+id/sidemenu_public_arts_icon"
                    android:layout_width="@dimen/side_menu_items_size"
                    android:layout_height="@dimen/side_menu_items_size"
                    android:src="@drawable/public_arts" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_10"
                    android:fontFamily="@font/din_next_lt_pro_regular"
                    android:text="@string/side_menu_public_arts_text"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/font_size_16" />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/padding_15"
            android:layout_weight="1"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/sidemenu_dining_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/padding_15">

                <ImageView
                    android:id="@+id/sidemenu_dining_icon"
                    android:layout_width="@dimen/side_menu_items_size"
                    android:layout_height="@dimen/side_menu_items_size"
                    android:src="@drawable/diningwhite" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_10"
                    android:fontFamily="@font/din_next_lt_pro_regular"
                    android:text="@string/side_menu_dining_text"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/font_size_16" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/sidemenu_gift_shop_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/padding_15">

                <ImageView
                    android:id="@+id/sidemenu_gift_shop_icon"
                    android:layout_width="@dimen/side_menu_items_size"
                    android:layout_height="@dimen/side_menu_items_size"
                    android:src="@drawable/gift_shop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_10"
                    android:fontFamily="@font/din_next_lt_pro_regular"
                    android:text="@string/side_menu_gift_shop_text"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/font_size_16" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/sidemenu_park_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/padding_15">

                <ImageView
                    android:id="@+id/sidemenu_park_icon"
                    android:layout_width="@dimen/side_menu_items_size"
                    android:layout_height="@dimen/side_menu_items_size"
                    android:src="@drawable/parkwhite" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_10"
                    android:fontFamily="@font/din_next_lt_pro_regular"
                    android:text="@string/side_menu_parks_text"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/font_size_16" />


            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/padding_10"
            android:paddingEnd="@dimen/padding_20"
            android:paddingStart="@dimen/padding_20">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorWhite" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/padding_3"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="bottom|start">

                <ImageView
                    android:id="@+id/sidemenu_qatar_museum_icon"
                    android:layout_width="@dimen/qatar_museum_icon_width"
                    android:layout_height="@dimen/qatar_museum_icon_height"
                    android:layout_gravity="start"
                    android:src="@drawable/qatar_museum" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/sidemenu_settings_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/padding_10"
                android:layout_weight=".5"
                android:gravity="bottom"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/sidemenu_settings_icon"
                    android:layout_width="@dimen/side_menu_settings_icon_width"
                    android:layout_height="@dimen/side_menu_settings_icon_height"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/settings" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/din_next_lt_pro_regular"
                    android:text="@string/action_settings"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/font_size_16" />

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>


</LinearLayout>
